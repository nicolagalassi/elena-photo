---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Elena Ghini - Fotografia di scena, ritrattistica e nudo artistico.", 
  image = "/social-image.jpg" // Immagine di default (vedi sotto)
} = Astro.props;

// Assicura che l'immagine abbia un URL assoluto (richiesto da Facebook/LinkedIn)
const siteUrl = Astro.url.origin;
const imageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
---

<title>{title}</title>
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl} />