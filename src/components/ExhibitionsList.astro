---
import { getEntry } from 'astro:content';
const exhibitionsEntry = await getEntry('exhibitions', 'list');
const exhibitions = exhibitionsEntry ? exhibitionsEntry.data.items : [];
---

<section class="max-w-4xl mx-auto px-4 py-16 text-center">
    <h3 class="text-lg font-bold uppercase tracking-widest mb-12 text-text-main transition-colors">
        Mostre e Riconoscimenti
    </h3>

    <div class="space-y-8">
        {exhibitions.map((item) => (
            <div class="flex flex-col md:flex-row justify-center items-baseline gap-1 md:gap-4 text-sm md:text-base">
                <span class="font-bold whitespace-nowrap text-text-main uppercase transition-colors">
                    ANNO {item.year}
                </span>
                <span class="hidden md:inline text-stone-400">-</span>
                <span class="text-text-muted uppercase tracking-wide transition-colors">
                    {item.description}
                </span>
            </div>
        ))}
    </div>
</section>