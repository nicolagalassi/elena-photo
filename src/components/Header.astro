---
import ThemeToggle from './ThemeToggle.astro';

interface Props { lang?: 'it' | 'en'; }
const { lang = 'it' } = Astro.props;

const homeLink = lang === 'it' ? '/' : '/en';
const portfolioLink = lang === 'it' ? '/#portfolio' : '/en/#portfolio';
const switchLangLink = lang === 'it' ? '/en' : '/';
const switchLangLabel = lang === 'it' ? 'EN' : 'IT';

const menuItems = [ { label: 'Home', href: homeLink }, { label: 'Portfolio', href: portfolioLink } ];
---

<header class="py-6 bg-bg-secondary transition-colors duration-500">
  <div class="max-w-6xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-4">
    
    <a href={homeLink} class="text-3xl font-serif-title text-text-main uppercase tracking-wider transition-colors">
      Elena Ghini Photo
    </a>

    <div class="flex items-center gap-6">
        <nav>
        <ul class="flex gap-6 text-sm font-medium text-text-muted uppercase tracking-widest transition-colors">
            {menuItems.map(item => (
            <li><a href={item.href} class="hover:text-text-main transition-colors">{item.label}</a></li>
            ))}
        </ul>
        </nav>

        <div class="flex items-center gap-4 border-l border-text-main/10 pl-6">
            <a href={switchLangLink} class="text-xs font-bold text-text-muted hover:text-text-main transition-colors">
                {switchLangLabel}
            </a>
            <ThemeToggle />
        </div>
    </div>
  </div>
</header>