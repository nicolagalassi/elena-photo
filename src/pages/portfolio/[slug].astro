---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Generazione percorsi statici
export async function getStaticPaths() {
  const projects = await getCollection('portfolio');
  
  return projects.map(project => ({
    // ERRORE ERA QUI: 'slug: project.slug' -> CAMBIA IN 'slug: project.id'
    params: { slug: project.id }, 
    props: { project },
  }));
}

const { project } = Astro.props;

// Gestione lingua URL
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/en') ? 'en' : 'it';

// Recupero dati
const title = lang === 'it' ? project.data.title_it : (project.data.title_en || project.data.title_it);
// Recuperiamo l'URL dell'immagine di copertina
// Astro Assets gestisce le immagini come oggetti, dobbiamo estrarre l'src
const coverImageSrc = project.data.coverImage ? project.data.coverImage.src : undefined;
---

<Layout title={`${title} | Elena Ghini`} lang={lang} image={coverImageSrc}>
  
  <article class="max-w-6xl mx-auto px-4 py-12">
    
    <header class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-serif-title text-text-main uppercase tracking-widest transition-colors">
        {title}
      </h1>
    </header>

    {project.data.gallery && project.data.gallery.length > 0 ? (
      <div class="columns-1 md:columns-2 lg:columns-3 gap-4 space-y-4">
        {project.data.gallery.map((imagePath, index) => (
          <div class="break-inside-avoid">
            <Image 
              src={imagePath} 
              alt={title}
              widths={[400, 800, 1200]}
              sizes="(max-width: 768px) 100vw, 33vw"
              format="webp"
              quality={80}
              class="w-full rounded-sm hover:opacity-95 transition-opacity"
            />
          </div>
        ))}
      </div>
    ) : (
      <p class="text-center text-text-muted">Nessuna immagine in questa galleria.</p>
    )}

  </article>

</Layout>