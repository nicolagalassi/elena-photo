---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import WaveSeparator from '../../components/WaveSeparator.astro';

export async function getStaticPaths() {
  const projects = await getCollection('portfolio');
  return projects.map(project => ({
    params: { slug: project.id }, 
    props: { project },
  }));
}

const { project } = Astro.props;
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/en') ? 'en' : 'it';
const title = lang === 'it' ? project.data.title_it : (project.data.title_en || project.data.title_it);
const coverImageSrc = project.data.coverImage ? project.data.coverImage.src : undefined;
---

<Layout title={`${title} | Elena Ghini`} lang={lang} image={coverImageSrc}>
  
  <article class="pt-12 pb-0 bg-bg-primary transition-colors duration-500">
    
    <div class="max-w-6xl mx-auto px-4 mb-16">
        <header class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-serif-title text-text-main uppercase tracking-widest transition-colors">
              {title}
          </h1>
        </header>

        {project.data.gallery && project.data.gallery.length > 0 ? (
        
        /* MASONRY NATIVO (Stile Pinterest)
           - columns-1: 1 colonna su mobile
           - md:columns-2: 2 colonne su tablet
           - lg:columns-3: 3 colonne su desktop
           - gap-6: Spazio laterale tra le colonne
           - space-y-6: Non lo usiamo qui, usiamo il margin-bottom sul singolo elemento per stabilit√†
        */
        <div class="columns-1 md:columns-2 lg:columns-3 gap-6">
            {project.data.gallery.map((imagePath) => (
              
              /* CONTENITORE FOTO
                 - break-inside-avoid: FONDAMENTALE. Vieta alla foto di spezzarsi tra due colonne.
                 - mb-6: Crea lo spazio verticale sotto ogni foto (uguale al gap-6 orizzontale).
              */
              <div class="break-inside-avoid mb-6">
                <Image 
                  src={imagePath} 
                  alt={title} 
                  widths={[400, 800]}
                  sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  format="webp"
                  quality={80}
                  class="w-full h-auto rounded-sm transition-transform duration-700 hover:scale-[1.02] shadow-sm"
                />
              </div>
            ))}
        </div>
        ) : (
        <p class="text-center text-text-muted">Nessuna immagine in questa galleria.</p>
        )}
    </div>

    <WaveSeparator color="dark" />

  </article>

</Layout>